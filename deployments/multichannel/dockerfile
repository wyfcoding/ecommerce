# Build stage
FROM golang:1.25-alpine AS builder

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git make

# Copy go mod and sum files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -o bin/multichannel-service cmd/multichannel/main.go

# Final stage
FROM alpine:latest

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache ca-certificates tzdata

# Copy binary from builder
COPY --from=builder /app/bin/multichannel-service .
COPY --from=builder /app/configs/multichannel/config.toml ./configs/multichannel/config.toml

# Expose ports
EXPOSE 8104 9124

# Run the application
CMD ["./multichannel-service"]
